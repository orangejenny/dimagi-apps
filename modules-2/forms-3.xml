<h:html xmlns:h="http://www.w3.org/1999/xhtml" xmlns:orx="http://openrosa.org/jr/xforms" xmlns="http://www.w3.org/2002/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:vellum="http://commcarehq.org/xforms/vellum">
	<h:head>
		<h:title>Transfer Patient</h:title>
		<model>
			<instance>
				<data xmlns:jrm="http://dev.commcarehq.org/jr/xforms" xmlns="http://openrosa.org/formdesigner/7E74D2A2-3F9D-4CA3-89AA-AC48312D3C16" uiVersion="1" version="626" name="Transfer Patient">
					<transfer_patient/>
					<transfer_reason_list/>
					<if_other/>
					<transfer_actions>
						<time/>
						<transfer_ipc/>
						<transfer_provision/>
						<partograph/>
						<patient_status/>
					</transfer_actions>
				<case xmlns="http://commcarehq.org/case/transaction/v2" case_id="" date_modified="" user_id=""><update><patient_status/></update></case><orx:meta xmlns:cc="http://commcarehq.org/xforms"><orx:deviceID/><orx:timeStart/><orx:timeEnd/><orx:username/><orx:userID/><orx:instanceID/><cc:appVersion/></orx:meta></data>
			</instance><instance id="commcaresession" src="jr://instance/session"/>
			<bind nodeset="/data/transfer_patient"/>
			<bind nodeset="/data/transfer_reason_list"/>
			<bind nodeset="/data/if_other" type="xsd:string" relevant="selected(/data/transfer_reason_list, 'other')"/>
			<bind nodeset="/data/transfer_actions"/>
			<bind nodeset="/data/transfer_actions/time"/>
			<bind nodeset="/data/transfer_actions/transfer_ipc"/>
			<bind nodeset="/data/transfer_actions/transfer_provision"/>
			<bind nodeset="/data/transfer_actions/partograph"/>
			<bind nodeset="/data/transfer_actions/patient_status" calculate="'transfered'"/>
			<itext>
				<translation lang="en" default="">
					<text id="transfer_patient-label">
						<value>Are you transfering the patient to:</value>
					</text>
					<text id="transfer_patient-doctor-label">
						<value>Another doctor</value>
					</text>
					<text id="transfer_patient-facilty-label">
						<value>Another facility </value>
					</text>
					<text id="transfer_reason_list-label">
						<value>Select the reason(s) for transferring this patient:</value>
					</text>
					<text id="transfer_reason_list-crossed_alert-label">
						<value>Cervical dilation has crossed the alert line. Indication of abnormal labour (prolonged/obstructed)</value>
					</text>
					<text id="transfer_reason_list-fhr_distress-label">
						<value>Fetal heart rate is less than 110 beats/min or above 160 beats/min.</value>
					</text>
					<text id="transfer_reason_list-af_distress-label">
						<value>Meconium and/or blood stained amniotic fluid</value>
					</text>
					<text id="transfer_reason_list-contraction_distress-label">
						<value>Contractions not increasing in duration, intensity and frequency (e.g., &lt; 2 contractions lasting for &gt; 20 seconds in 10 minutes)</value>
					</text>
					<text id="transfer_reason_list-vitals_distress-label">
						<value>Maternal vital signs cross normal limits (i.e. pulse &gt; 100, blood pressure &gt; 140/90, temperature &gt; 38C)</value>
					</text>
					<text id="transfer_reason_list-other-label">
						<value>Other</value>
					</text>
					<text id="if_other-label">
						<value>If listed "other" as an option, please explain here:</value>
					</text>
					<text id="transfer_actions-label">
						<value>Necessary transfer actions to do:</value>
					</text>
					<text id="transfer_actions/time-label">
						<value>1. Note the time when cervical dilation plotting crosses the alert line</value>
					</text>
					<text id="transfer_actions/transfer_ipc-label">
						<value>2. Transfer to IPC</value>
					</text>
					<text id="transfer_actions/transfer_provision-label">
						<value>3. Ensure provision for transfer</value>
					</text>
					<text id="transfer_actions/partograph-label">
						<value>4. Second partograph with patient</value>
					</text>
				</translation>
				<translation lang="hin">
					<text id="transfer_patient-label">
						<value>Are you transfering the patient to:</value>
					</text>
					<text id="transfer_patient-doctor-label">
						<value>&#2342;&#2370;&#2360;&#2352;&#2366; &#2337;&#2377;&#2325;&#2381;&#2335;&#2352;
</value>
					</text>
					<text id="transfer_patient-facilty-label">
						<value>Another facility </value>
					</text>
					<text id="transfer_reason_list-label">
						<value>Select the reason(s) for transferring this patient:</value>
					</text>
					<text id="transfer_reason_list-crossed_alert-label">
						<value>Cervical dilation has crossed the alert line. Indication of abnormal labour (prolonged/obstructed)</value>
					</text>
					<text id="transfer_reason_list-fhr_distress-label">
						<value>Fetal heart rate is less than 110 beats/min or above 160 beats/min.</value>
					</text>
					<text id="transfer_reason_list-af_distress-label">
						<value>Meconium and/or blood stained amniotic fluid</value>
					</text>
					<text id="transfer_reason_list-contraction_distress-label">
						<value>Contractions not increasing in duration, intensity and frequency (e.g., &lt; 2 contractions lasting for &gt; 20 seconds in 10 minutes)</value>
					</text>
					<text id="transfer_reason_list-vitals_distress-label">
						<value>Maternal vital signs cross normal limits (i.e. pulse &gt; 100, blood pressure &gt; 140/90, temperature &gt; 38C)</value>
					</text>
					<text id="transfer_reason_list-other-label">
						<value>Other</value>
					</text>
					<text id="if_other-label">
						<value>If listed "other" as an option, please explain here:</value>
					</text>
					<text id="transfer_actions-label">
						<value>Necessary transfer actions to do:</value>
					</text>
					<text id="transfer_actions/time-label">
						<value>1. Note the time when cervical dilation plotting crosses the alert line</value>
					</text>
					<text id="transfer_actions/transfer_ipc-label">
						<value>2. Transfer to IPC</value>
					</text>
					<text id="transfer_actions/transfer_provision-label">
						<value>3. Ensure provision for transfer</value>
					</text>
					<text id="transfer_actions/partograph-label">
						<value>4. Second partograph with patient</value>
					</text>
				</translation>
			</itext>
		<bind calculate="/data/meta/timeEnd" nodeset="/data/case/@date_modified" type="xsd:dateTime"/><bind calculate="/data/meta/userID" nodeset="/data/case/@user_id"/><bind calculate="instance('commcaresession')/session/data/case_id" nodeset="/data/case/@case_id"/><bind calculate="/data/transfer_actions/patient_status" nodeset="/data/case/update/patient_status" relevant="count(/data/transfer_actions/patient_status) &gt; 0"/><setvalue event="xforms-ready" ref="/data/meta/deviceID" value="instance('commcaresession')/session/context/deviceid"/><setvalue event="xforms-ready" ref="/data/meta/timeStart" value="now()"/><bind nodeset="/data/meta/timeStart" type="xsd:dateTime"/><setvalue event="xforms-revalidate" ref="/data/meta/timeEnd" value="now()"/><bind nodeset="/data/meta/timeEnd" type="xsd:dateTime"/><setvalue event="xforms-ready" ref="/data/meta/username" value="instance('commcaresession')/session/context/username"/><setvalue event="xforms-ready" ref="/data/meta/userID" value="instance('commcaresession')/session/context/userid"/><setvalue event="xforms-ready" ref="/data/meta/instanceID" value="uuid()"/><setvalue event="xforms-ready" ref="/data/meta/appVersion" value="instance('commcaresession')/session/context/appversion"/></model>
	</h:head>
	<h:body>
		<select1 ref="/data/transfer_patient">
			<label ref="jr:itext('transfer_patient-label')"/>
			<item>
				<label ref="jr:itext('transfer_patient-doctor-label')"/>
				<value>doctor</value>
			</item>
			<item>
				<label ref="jr:itext('transfer_patient-facilty-label')"/>
				<value>facilty</value>
			</item>
		</select1>
		<select ref="/data/transfer_reason_list">
			<label ref="jr:itext('transfer_reason_list-label')"/>
			<item>
				<label ref="jr:itext('transfer_reason_list-crossed_alert-label')"/>
				<value>crossed_alert</value>
			</item>
			<item>
				<label ref="jr:itext('transfer_reason_list-fhr_distress-label')"/>
				<value>fhr_distress</value>
			</item>
			<item>
				<label ref="jr:itext('transfer_reason_list-af_distress-label')"/>
				<value>af_distress</value>
			</item>
			<item>
				<label ref="jr:itext('transfer_reason_list-contraction_distress-label')"/>
				<value>contraction_distress</value>
			</item>
			<item>
				<label ref="jr:itext('transfer_reason_list-vitals_distress-label')"/>
				<value>vitals_distress</value>
			</item>
			<item>
				<label ref="jr:itext('transfer_reason_list-other-label')"/>
				<value>other</value>
			</item>
		</select>
		<input ref="/data/if_other">
			<label ref="jr:itext('if_other-label')"/>
		</input>
		<group ref="/data/transfer_actions" appearance="field-list">
			<label ref="jr:itext('transfer_actions-label')"/>
			<trigger ref="/data/transfer_actions/time" appearance="minimal">
				<label ref="jr:itext('transfer_actions/time-label')"/>
			</trigger>
			<trigger ref="/data/transfer_actions/transfer_ipc" appearance="minimal">
				<label ref="jr:itext('transfer_actions/transfer_ipc-label')"/>
			</trigger>
			<trigger ref="/data/transfer_actions/transfer_provision" appearance="minimal">
				<label ref="jr:itext('transfer_actions/transfer_provision-label')"/>
			</trigger>
			<trigger ref="/data/transfer_actions/partograph" appearance="minimal">
				<label ref="jr:itext('transfer_actions/partograph-label')"/>
			</trigger>
		</group>
	</h:body>
</h:html>