			</itext>
		<bind calculate="/data/meta/timeEnd" nodeset="/data/case/@date_modified" type="xsd:dateTime"/><bind calculate="/data/meta/userID" nodeset="/data/case/@user_id"/><bind calculate="instance('commcaresession')/session/data/case_id" nodeset="/data/case/@case_id"/><bind calculate="/data/blank" nodeset="/data/case/update/last_exam_time" relevant="count(/data/blank) &gt; 0"/><bind calculate="/data/blank" nodeset="/data/case/update/last_pv_time" relevant="count(/data/blank) &gt; 0"/><bind calculate="/data/transfer_actions/patient_status" nodeset="/data/case/update/patient_status" relevant="count(/data/transfer_actions/patient_status) &gt; 0"/><setvalue event="xforms-ready" ref="/data/meta/deviceID" value="instance('commcaresession')/session/context/deviceid"/><setvalue event="xforms-ready" ref="/data/meta/timeStart" value="now()"/><bind nodeset="/data/meta/timeStart" type="xsd:dateTime"/><setvalue event="xforms-revalidate" ref="/data/meta/timeEnd" value="now()"/><bind nodeset="/data/meta/timeEnd" type="xsd:dateTime"/><setvalue event="xforms-ready" ref="/data/meta/username" value="instance('commcaresession')/session/context/username"/><setvalue event="xforms-ready" ref="/data/meta/userID" value="instance('commcaresession')/session/context/userid"/><setvalue event="xforms-ready" ref="/data/meta/instanceID" value="uuid()"/><setvalue event="xforms-ready" ref="/data/meta/appVersion" value="instance('commcaresession')/session/context/appversion"/></model>
	</h:head>
	<h:body>
		<select1 ref="/data/transfer_patient">
			<label ref="jr:itext('transfer_patient-label')"/>
			<item>
				<label ref="jr:itext('transfer_patient-doctor-label')"/>
				<value>doctor</value>
			</item>
			<item>
				<label ref="jr:itext('transfer_patient-facilty-label')"/>
				<value>facilty</value>
			</item>
		</select1>
		<select ref="/data/transfer_reason_list">
			<label ref="jr:itext('transfer_reason_list-label')"/>
			<item>
				<label ref="jr:itext('transfer_reason_list-crossed_alert-label')"/>
				<value>crossed_alert</value>
			</item>
			<item>
				<label ref="jr:itext('transfer_reason_list-fhr_distress-label')"/>
				<value>fhr_distress</value>
			</item>
			<item>
				<label ref="jr:itext('transfer_reason_list-af_distress-label')"/>
				<value>af_distress</value>
			</item>
			<item>
				<label ref="jr:itext('transfer_reason_list-contraction_distress-label')"/>
				<value>contraction_distress</value>
			</item>
			<item>
				<label ref="jr:itext('transfer_reason_list-vitals_distress-label')"/>
				<value>vitals_distress</value>
			</item>
			<item>
				<label ref="jr:itext('transfer_reason_list-other-label')"/>
				<value>other</value>
			</item>
		</select>
		<input ref="/data/if_other">
			<label ref="jr:itext('if_other-label')"/>
		</input>
		<group ref="/data/transfer_actions" appearance="field-list">
			<label ref="jr:itext('transfer_actions-label')"/>
			<trigger ref="/data/transfer_actions/time" appearance="minimal">
				<label ref="jr:itext('transfer_actions/time-label')"/>
			</trigger>
			<trigger ref="/data/transfer_actions/transfer_ipc" appearance="minimal">
				<label ref="jr:itext('transfer_actions/transfer_ipc-label')"/>
			</trigger>
			<trigger ref="/data/transfer_actions/transfer_provision" appearance="minimal">
				<label ref="jr:itext('transfer_actions/transfer_provision-label')"/>
			</trigger>
			<trigger ref="/data/transfer_actions/partograph" appearance="minimal">
				<label ref="jr:itext('transfer_actions/partograph-label')"/>
			</trigger>
		</group>
	</h:body>
</h:html>